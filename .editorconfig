#EditorConfig helps developers define an mantain consistent
#coding styles between different editors and IDEs
#editorconfig.org

root=true

[*]

#change these settings to your own preference
indent_style = space
indent_size = 2

#we recomend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.md]
trim_trailing_whitespace = false